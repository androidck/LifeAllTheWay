<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title"/>
    <include layout="@layout/divisions_line"/>
    <TextView
        android:id="@+id/tv_account_security"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:text="账号与安全"
        android:textColor="@color/textColors"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/user_open"
        android:textSize="@dimen/space_30"
        android:background="@android:color/white"
        />
    <include layout="@layout/divisions_line"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开放手机号"
            android:textColor="@color/textColors"
            android:gravity="center_vertical"
            android:textSize="@dimen/space_30"
            />
        <Switch
            android:id="@+id/is_switch_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/division_line"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="清除缓存"
            android:textColor="@color/textColors"
            android:gravity="center_vertical"
            android:textSize="@dimen/space_30"
            />
        <TextView
            android:id="@+id/tv_dump"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0KB"
            android:drawableRight="@mipmap/user_open"
            android:textColor="@color/textColors"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/space_30"
            android:drawablePadding="@dimen/space_16"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:background="@drawable/share_btn"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        android:layout_marginTop="@dimen/space_100"
        android:text="@string/login_out"
        android:textColor="@android:color/white"
        />
</com.zhy.autolayout.AutoLinearLayout>